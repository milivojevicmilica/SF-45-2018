        <Label x:Name="label_Copy2" Content="Broj Ucionice:" HorizontalAlignment="Left" Margin="358,339,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="559,363,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Background="LemonChiffon" x:Name="button" Content="Ponisti" HorizontalAlignment="Left" Margin="689,390,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button Background="LemonChiffon" x:Name="button1" Content="Sortiraj" HorizontalAlignment="Left" Margin="689,28,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <RadioButton x:Name="radioButtonSifra" Content="Po sifri" HorizontalAlignment="Left" Margin="689,57,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonBrojUcionice" Content="Po broju ucionice" HorizontalAlignment="Left" Margin="689,97,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonBrjMesta" Content="Po broju mesta" HorizontalAlignment="Left" Margin="689,77,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonTipUcionice" Content="Po tipu ucionice" HorizontalAlignment="Left" Margin="689,117,0,0" VerticalAlignment="Top"/>

